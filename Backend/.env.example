# Database Configuration
DB_CONNECTION_STRING=Server=localhost,1433;Database=CamsDB;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true

# JWT Configuration  
JWT_KEY=your-256-bit-secret-key-here-change-in-production
JWT_ISSUER=https://localhost:5162
JWT_AUDIENCE=https://localhost:5162
JWT_EXPIRY_MINUTES=60

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=Information

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@cams.example.com
SMTP_FROM_NAME=CAMS System

# Security
ENABLE_HTTPS_REDIRECTION=false
ENABLE_RATE_LIMITING=true
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Performance
CACHE_DURATION_MINUTES=5
MAX_CONCURRENT_REQUESTS=100

# Monitoring (Optional)
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_DETAILED_ERRORS=false

# API Keys (Optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
APPLICATION_INSIGHTS_KEY=

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_DOCUMENTATION=true

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx

# Session
SESSION_TIMEOUT_MINUTES=30
SLIDING_EXPIRATION=true

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
CLEANUP_INTERVAL_HOURS=24
LOG_RETENTION_DAYS=30