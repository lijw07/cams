# CAMS Frontend Environment Configuration Template
# Copy this file to .env.local and configure values for local development

# =============================================================================
# API Configuration
# =============================================================================
VITE_APP_API_URL=http://localhost:5000
VITE_APP_API_TIMEOUT=30000
VITE_APP_API_RETRY_ATTEMPTS=3
VITE_APP_API_RETRY_DELAY=1000

# =============================================================================
# Authentication & Security
# =============================================================================
VITE_APP_AUTH_STORAGE_TYPE=localStorage
VITE_APP_SESSION_TIMEOUT=1800000
VITE_APP_SESSION_WARNING_TIME=300000
VITE_APP_TOKEN_REFRESH_INTERVAL=600000

# =============================================================================
# Feature Flags
# =============================================================================
VITE_APP_FEATURE_ANALYTICS=true
VITE_APP_FEATURE_SIGNALR=true
VITE_APP_FEATURE_BULK_OPERATIONS=true
VITE_APP_FEATURE_ADVANCED_LOGGING=true

# =============================================================================
# Analytics Configuration
# =============================================================================
VITE_APP_GA_MEASUREMENT_ID=
VITE_APP_ANALYTICS_DEBUG=false
VITE_APP_ANALYTICS_SAMPLING_RATE=1.0

# =============================================================================
# Performance Configuration
# =============================================================================
VITE_APP_PERFORMANCE_MONITORING=true
VITE_APP_LOG_LEVEL=info
VITE_APP_SENTRY_DSN=

# =============================================================================
# Application Configuration
# =============================================================================
VITE_APP_NAME=CAMS
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_BUILD_NUMBER=local

# =============================================================================
# UI Configuration
# =============================================================================
VITE_APP_THEME_MODE=system
VITE_APP_DEFAULT_PAGE_SIZE=20
VITE_APP_MAX_FILE_UPLOAD_SIZE=10485760

# =============================================================================
# Legacy Environment Variables (Deprecated)
# =============================================================================
# These are maintained for backward compatibility but should be migrated
VITE_API_URL=http://localhost:5000
VITE_GA_MEASUREMENT_ID=